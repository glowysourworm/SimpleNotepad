<UserControl x:Class="SimpleNotepad.View.CPlusPlusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:localView="clr-namespace:SimpleNotepad.View"
             xmlns:wpfUtilityView="clr-namespace:SimpleNotepad.View;assembly=SimpleNotepad">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <localView:CodeClassView x:Name="ClassView" DataContext="{Binding Class}" />

        <!--wpfUtilityView:SimpleTextEditor x:Name="ClassEditor" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" /-->
        
    </Grid>
</UserControl>
